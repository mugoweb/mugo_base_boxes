{
  "builders": [
    {
      "name": "local",
      "boot_command": [
        "<up><wait><tab>",
        "text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `vb_disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "iso/{{user `iso_name`}}",
        "{{user `iso_mirror`}}/{{user `iso_mirror_directory`}}/{{user `iso_name`}}"
      ],
      "output_directory": "builds/virtualbox",
      "sata_port_count": 5,
      "shutdown_command": "echo '{{user `local_builder_password`}}' | sudo -S /sbin/halt -h -p",
      "ssh_password": "{{user `local_builder_password`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `local_builder_username`}}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `vb_memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `vb_cpus`}}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `image_name`}}-php{{user `server_php_version`}}-v{{user `version`}}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "8",
      "output": "builds/{{user `image_name`}}-php{{user `server_php_version`}}-v{{user `version`}}.box"
    },{
      "type": "checksum",
      "checksum_types": [
        "sha1"
      ],
      "output": "builds/{{user `image_name`}}-php{{user `server_php_version`}}-v{{user `version`}}.checksum"
    },{
      "type": "shell-local",
      "environment_vars": [
        "image_name={{user `image_name`}}",
        "server_php_version={{user `server_php_version`}}",
        "version={{user `version`}}"
      ],
      "script": "scripts/common/create_vagrant_json.sh"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "local_builder_username={{user `local_builder_username`}}"
      ],
      "execute_command": "echo '{{user `local_builder_password`}}' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "only": [
        "local"
      ],
      "scripts": [
        "scripts/common/sudo.sh",
        "scripts/centos/update.sh",
        "scripts/centos/ansible.sh",
        "scripts/common/sshd.sh",
        "scripts/centos/networking.sh",
        "scripts/common/virtualbox.sh"
      ],
      "type": "shell"
    },{
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "clean_staging_directory": true,
      "playbook_file": "ansible/main.yml",
      "galaxy_file": "ansible/requirements.yml",
      "extra_arguments": [
        "--extra-vars",
        "'{\"vars_file_name\":\"{{user `image_name`}}.yml\",\"server_users\":{{user `server_users_local`}},\"server_php_version\":\"{{user `server_php_version`}}\",\"server_varnish_version\":\"{{user `server_varnish_version`}}\"}'"
      ]
    },{
      "environment_vars": [
        "local_builder_username={{user `local_builder_username`}}"
      ],
      "execute_command": "echo '{{user `local_builder_password`}}' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh",
        "scripts/common/scrub_local_builder_artifacts.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "iso_checksum": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "iso_checksum_type": "sha256",
    "iso_mirror": "http://mirrors.kernel.org/centos",
    "iso_mirror_directory": "7.6.1810/isos/x86_64",
    "iso_name": "CentOS-7-x86_64-DVD-1810.iso",
    "image_name": "centos7.6.1810",
    "local_builder_NOTES": "DUE TO CENTOS LIMITATIONS, ALTERING LOCAL_BUILDER_USERNAME OR LOCAL_BUILDER_ROOT_PASSWORD REQUIRES CORRESPONDING CHANGES IN http/ks.cfg.",
    "local_builder_password": "packer",
    "local_builder_root_password": "root",
    "local_builder_username": "packer",
    "server_php_version": "5.6",
    "server_users_local": "[ \"ezpub\", \"vagrant\" ]",
    "server_users_stage": "[ \"ezpub\" ]",
    "server_users_prod": "[ \"ezpub\" ]",
    "server_varnish_version": "41",
    "version": "0.1",
    "vb_cpus": "1",
    "vb_disk_size": "102400",
    "vb_memory": "1024"
  }
}